<h1>New Post!!!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_for(@post) do |f| %> 

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :summary %>
	<%= f.text_field :summary %>

	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.file_field :cover %>

	<%= f.submit "Create Post", class: "btn btn-primary" %> 

	<% end %>
  </div>
</div>