<div class="panel-header">
	<h4>熱門</h4>
	  <!-- Nav tabs -->
	<ul class="nav nav-tabs custom-panel-nav" role="tablist" id="hot-post-nav">
	<% Tag.main_tag.first(3).each_with_index do |t, i| %>	
		<li role="presentation" class="<%= 'active' if i == 0 %>"><a href="#<%= t.name_en %>" aria-controls="<%= t.name_en %>" role="tab" data-toggle="tab"><%= t.name_zh %></a>
		</li>
	<% end %>

  </ul>
</div>
<div class="panel-body">

  <!-- Tab panes -->
  <div class="tab-content">
	<% Tag.main_tag.first(3).each_with_index do |t, i| %>	
		<div role="tabpanel" class="tab-pane <%= 'active' if i == 0 %>" id="<%= t.name_en %>">
			<%= render partial: "partials/tabs_hot_post", locals: { post: t.posts.take(perpage) } %>
		</div>
	<% end %>
  </div>


	<%#= render partial: 'partials/small_post', collection: @hot_posts.first(perpage) %>
</div>

<script type="text/javascript">
	// $('#hot-post-nav > li:first-child').addClass( "active" );
	$('#hot-post-nav a').click(function (e) {
	  e.preventDefault();
	  $(this).tab('show');
	})
</script>