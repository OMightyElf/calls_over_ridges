<section class="main">
	<section class="login">
		<div class="wrap">
			<div class="login__form">
				<div class="login__title">忘記密碼</div>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				<%= devise_error_messages! %>
				<div class="input-field">
					<%= f.email_field :email, autofocus: true, placeholder: "註冊時Email", class: "validate" %>
					<%= f.label :email, '帳號', data: { error: "!帳號是註冊時的Email喔", success: "CORRECT" } %>
				</div>
				<div class="actionArea">
					<%= f.submit "寄給我重設密碼信",  class: "btn" %>
				</div>
				<% end %>
			</div>
		</div>
	</section>
</section>