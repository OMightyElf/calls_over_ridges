<% content_for :javascript do %>
<script>
	$(function () {
		$(window).resize(function () {
			var ww = $(window).width(),
			wh = $(window).height();
			$('.banner, .indexVideo').height(wh);
			$('.main').css('padding-top', 0)
		}).trigger('resize');

		$('.scrollDown').on('click', function () {
			var wh = $(window).height(),
				hh = $('.header').outerHeight();
			var page = $("html, body");
			page.on("scroll mousedown wheel DOMMouseScroll mousewheel keyup touchmove", function () {
				page.stop();
			});
			page.animate({ scrollTop: wh - hh }, 'slow', function () {
				page.off("scroll mousedown wheel DOMMouseScroll mousewheel keyup touchmove");
			});
			return false;
		})
		$('body').addClass('indexHide');

		$(window).scroll(function () {
			var ww = $(window).width(),
			wh = $(window).height(),
			hh = $('.header').outerHeight(),
			scrollTop = $(this).scrollTop();
			if (scrollTop > wh) {
				$('body').removeClass('indexHide');
			} else {
				$('body').addClass('indexHide');
			};
		}).trigger('scroll');

		$('.bxslider').bxSlider({
			maxSlides: 3,
			minSlides: 1,
			slideWidth: 400,
			slideMargin: 20,
			moveSlides: 1
		});

		$('.fancybox').fancybox({
			padding: 0,
			height: '100%',
			width: '100%'
		});
	});
</script>
<% end %>
